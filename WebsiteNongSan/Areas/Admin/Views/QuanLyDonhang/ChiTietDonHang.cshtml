@model WebsiteNongSan.Models.ChiTietDonHang
@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="title">Quản lý đơn hàng</h1>
<div style="display: flex; align-items: center; justify-content: space-between">
    <ul class="breadcrumbs">
        <li><a href="#">Trang chủ</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Quản lý đơn hàng</a></li>
        <li class="divider">/</li>
        <li><a href="#" class="active">Chi tiết đơn hàng</a></li>
    </ul>
</div>
<div class="container">
    <div class="card">
        <div class="table-wrapper" style="background-color: #fff; padding: 18px">
            <div style="display: flex; align-items: center;">
                <div style="width: 40%; ">
                    @foreach (var item in ViewBag.CTDH)
                    {
                        <div style="display: flex; align-items: center; border-right: 1px solid #ccc; width: 100%; ">
                            <div style="width: 10%">
                                <img src="~/Content/Assets/Images/@item.SanPham.HinhAnh" alt="" style="width: 100%" />
                            </div>
                            <div style="width: 80%; padding-left: 15px; display: flex; align-items: center; justify-content: space-between">
                                <p style="margin-bottom: 0; font-size: 16px; color: #333">@item.SanPham.TenSanPham</p>
                                @if (ViewBag.GioHang != null && ViewBag.GioHang.SoLuong != null)
                                {
                                    <p style="font-size: 14px; color: #8f9bb3">
                                        x @ViewBag.GioHang.SoLuong
                                    </p>
                                }

                                <div>
                                    <p style="font-size: 14px; color: #8f9bb3">@String.Format("{0:0,0}đ", item.SanPham.Gia)</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div style="width: 60%; padding-left: 10px">
                    <table class="authors-table">
                        <thead>
                            <tr>
                                <th style="color: #2d3436">Mã đơn hàng</th>
                                <th style="color: #2d3436">Họ tên</th>
                                <th style="color: #2d3436">Địa chỉ</th>
                                <th style="color: #2d3436">Trạng thái</th>
                                <th style="color: #2d3436">Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody class="tableProduct">
                            <tr>
                                <td>@Model.IDDonHang</td>
                                <td>@Model.DonHang.NguoiDung.TenNguoiDung</td>
                                <td>@Model.DonHang.DiaChi</td>
                                <td>@Model.DonHang.TrangThai</td>
                                <td>@String.Format("{0:0,0}đ", Model.DonHang.TongTien)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <form action="~/Admin/QuanLyDonHang/DuyetDon/@Model.IDDonHang" method="post">
                <div style="margin-top: 14px">
                    <a href="~/Admin/QuanLyDonHang/DanhSachDonHang" style="border-radius: 4px; width: 120px; text-align:center; background-color: #476dd7; padding: 7px 20px; color: white; font-size: 14px">Trở về</a>
                    <input type="submit" name="txtDuyetDon" value="Duyệt đơn hàng" style="padding: 8px 20px; width: 180px; background-color: mediumseagreen; color: white; margin-top: 0; margin-left: 4px" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    input, select, .form-control {
        width: 100%;
        border-radius: 4px;
        border: 1px solid #bebebe;
        padding: 12px;
        margin-top: 8px;
    }

    button:hover, .button:hover {
        opacity: 0.8;
    }
</style>


